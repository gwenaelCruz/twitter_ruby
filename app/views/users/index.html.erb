<div class="container">
  <h1 class="header center-align teal-text text-lighten-2">Welcome !</h1>

  <div class="row">
    <% @users.each do |user| %>
          <div class="col s6 m3 l3 offset-l1">
             <div class="card z-depth-5">
              <div class="card-image">
                <%= link_to image_tag(user.img_url, class: 'circle responsive-img center-align'), user %>
                <div class="halfway-fab" style="position: relative;">

                  <div class="fixed-action-btn" style="position: absolute; bottom: 0; top: -30px;">
                    <a class="btn-floating btn-large teal lighten-2">
                      <i class="large material-icons">menu</i>
                    </a>
                    <ul style="top: -90px;">
                      <li>
                        <%= link_to edit_user_path(user), class: 'btn-floating blue' do %>
                          <i class="material-icons">mode_edit</i>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to user, class: 'btn-floating red', method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="material-icons">delete</i>
                        <% end %>
                      </li>
                    </ul>
                  </div>

                </div>
              </div>
               <div class="card-content">
                 <span class="card-title"><%= user.name %></span>
               </div>
            </div>
          </div>
    <% end %>
    <div class="col s6 m3 l3 user">
      <%= link_to new_user_path do %>
        <div class="placeholder"></div>
      <% end %>
    </div>

  </div>

<br>
</div>

<script type="text/javascript" charset="utf-8">
$(document).ready(function () {
    $(".fixed-action-btn").openFAB();
    $(".fixed-action-btn").closeFAB();
    $(".fixed-action-btn.toolbar")
})
</script>