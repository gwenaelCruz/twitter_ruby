<header>
  <ul class="side-nav fixed">
    <li>
      <div class="userView">
        <div class="background teal lighten-2"></div>
        <a href="#!user"><%= image_tag(@user.img_url, class:'circle') %></a>
        <a href="#!name"><span class="white-text name"><%= @user.name %></span></a>
      </div>
    </li>
    <div class="collection">
      <a href="#!" class="collection-item"><span class="badge"><%= @user.followers.count %></span>Followers</a>
      <a href="#!" class="collection-item waves-effect"><span class="badge"><%= @user.followings.size %></span>Followings</a>
    </div>
  </ul>
</header>

<main style="padding-left: 300px;">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col s12 m9 l10">
          <p> <%= post.content %></p>
        </div>
      </div>
    <%end%>
  </div>
</main>



<!-- Modal Trigger -->
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a href="#modal1" id="menu" class="btn btn-floating btn-large teal lighten-2"><i class="material-icons">comment</i></a>
</div>

  <!-- Modal Structure -->
  <div id="modal1" class="modal bottom-sheet">
    <div class="modal-content">
      <h4>Tweets tweets tweets</h4>
      <div class="input-field col s12">
        <%= render 'posts/form', 'post': @new_post %>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect btn-flat teal lighten-2">Send<i class="material-icons">done</i></a>
    </div>
  </div>