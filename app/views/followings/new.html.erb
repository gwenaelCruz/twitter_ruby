<div class="container">

  <h1 class="header center-align teal-text text-lighten-2">Follow these guys!</h1>

  <div class="row">
    <% @not_followings.each do |not_following| %>
        <div class="col s6 m3 l3 offset-l1">
          <div class="card z-depth-5">
            <div class="card-image">
              <%= link_to image_tag(not_following.img_url, class: 'circle responsive-img center-align'), not_following %>
              <%= link_to user_following_path(@user.id, not_following), class: 'halfway-fab red btn-floating', method: :put do %>
                  <i class="material-icons">add</i>
              <% end %>
            </div>
            <div class="card-content">
              <span class="card-title"><%= not_following.name %></span>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>